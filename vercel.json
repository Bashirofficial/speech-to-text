{
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/backend/index.js"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/backend/uploads/:path*"
    }
  ],
  "functions": {
    "backend/index.js": {
      "runtime": "@vercel/node@3.0.12"
    }
  },
  "routes": [
    {
      "src": "/uploads/(.*)",
      "dest": "/backend/uploads/$1"
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "/backend/index.js"
    }
  ]
}
